<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.padcmyanmar.zwe.assignment_repo.MainActivity"
    android:background="@drawable/curiositybackground">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/curiositylogo"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                />

            <Button
                android:id="@+id/btn_facebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="180dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="@string/facebook"
                android:textSize="18dp"
                android:textColor="@color/fullwhite"
                android:drawableLeft="@drawable/ic_facebook_logo"
                android:background="#cc303f9f"
                />

            <Button
                android:id="@+id/btn_google"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="@string/google"
                android:textSize="18dp"
                android:textColor="@color/fullwhite"
                android:drawableLeft="@drawable/googlelogo"
                android:background="#cc3647b9"
                />

            <Button
                android:id="@+id/btn_twitter"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="@string/twitter"
                android:textSize="18dp"
                android:textColor="@color/fullwhite"
                android:drawableLeft="@drawable/ic_twitter"
                android:background="#cc3647b9"
                />
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:weightSum="2">

                <Button
                    android:id="@+id/btn_sign_in"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                  android:layout_marginLeft="20dp"

                    android:text="@string/signin"
                    android:textAllCaps="false"
                    android:textColor="@color/fullwhite"
                    android:textSize="16dp"
                    android:drawableLeft="@drawable/ic_email"
                    android:background="#cc6d6f7c"
                    />

                <Button
                    android:id="@+id/btn_sign_up"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"

                    android:background="#cc6d6f7c"
                    android:drawableLeft="@drawable/ic_email"
                    android:text="@string/signup"
                    android:textAllCaps="false"
                    android:textColor="@color/fullwhite"
                    android:textSize="16dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/btn_terms"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:text="Terms Conditions and Privacy Policy"
              android:gravity="center"
                android:textColor="@color/fullwhite"/>
            
            
            
        </LinearLayout>
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
    </ScrollView>


</LinearLayout>
